@model Observer_ASP.NET_Core_Current.Models.Equipment
@{
    ViewBag.Title = "Edit component";
}
<form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Модель</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MaximumPressureForce" class="control-label">Максимальная сила давления</label>
        <input type="text" asp-for="MaximumPressureForce" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MaximumWorkingTemperature" class="control-label">Максимальная рабочая температура</label>
        <input type="number" asp-for="MaximumWorkingTemperature" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>
